<main class='profile_page main_bg'>
	<a href='/chat' data-href='chat' class='profile_page--btn_back'>
		<svg
			role='img'
			aria-label='Вернуться назад к чатам'
			width='28'
			height='28'
			viewBox='0 0 28 28'
			fill='none'
			xmlns='http://www.w3.org/2000/svg'
		>
			<circle
				cx='14'
				cy='14'
				r='14'
				transform='rotate(-180 14 14)'
				fill='#2A4166'
			></circle>
			<rect
				x='20'
				y='14.8'
				width='11'
				height='1.6'
				transform='rotate(-180 20 14.8)'
				fill='white'
			></rect>
			<path d='M13 19L9 14L13 9' stroke='white' stroke-width='1.6'></path>
		</svg>
	</a>
	<div class='profile'>
		{{{profileImageForm}}}
		<h2 class='profile--display_name'>{{displayName}}</h2>
		{{{profileForm}}}
		{{{profilePasswordForm}}}
	</div>
</main>

<form class='image_form' action='{{action}}' method='{{method}}'>
	<label class='image_form--label' htmlFor='id-{{name}}'>
		<img class='image_form--img' src='{{value}}' />
		<input
			class='hidden'
			type='{{type}}'
			id='id-{{name}}'
			name='{{name}}'
			value='{{value}}'
		/>
	</label>

</form>